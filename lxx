#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#define bool int        //这里用define定义了布尔类型
#define true 1          //避免一些编译器如vs2010没有该头文件无法使用的情况发生
#define false 0         //有些编译器如code:blocks可以直接使用头文件<include stdbool.h>
FILE *fp;               //文件指针，不多说
bool judge=true;
typedef struct
{
    char user[20];
    char code[20];
}Users;
Users pe; 

void write()
{
    if(fwrite(&pe,sizeof(Users),1,fp)!=1)
    {
        printf("\n\t\t写入文件错误");
        exit(0);                     //写入错误则退出程序
    }
}

void denglu()
{
    printf("\n=============================================\n");
    char u[20],c[20],temp[20];      //定义两个数组，存放键盘输入的用户名和密码
    printf("\n\t\t用户登录\n");
    printf("\n\t\t用户名:");
    scanf("%s",u);
    /*判断用户名是否存在*/
    fp=fopen(u,"r+");
    temp[0]='0';
    if(fp==NULL)
    {
        printf("\n\t\t用户不存在,请注册");
        printf("\n\t\t1.注册   2.重新登陆");
        scanf("%s",temp);
        if(temp[0]=='1')
        {
            zhuce();
        }
        else return denglu();
    }
    //登录密码验证
    do
    {
        if(judge==true)
        {
            fread(&pe,sizeof(Users),1,fp); //读取用户信息，即用户名和密码
        }
        printf("\t\t密  码:");
        scanf("%s",c);
        
        if(strcmp(pe.code,c)!=0)                      //对比输入的密码和读取的密码
        {
            printf("\n\t\t密码错误(1.退出 2.重新输入)");
            scanf("%s",temp);
            printf("\n");
            if(temp[0]=='1')
                {
                    fclose(fp);                           //关闭文件防止错误操作
                    return main();
                }
            
        }
        if(strcmp(pe.code,c)==0)
        {
            printf("\t\t登录成功\n");
            break;
        }
        
                        
        
    }while(temp[0]=='2');
    if(strcmp(pe.code,c)==0)
    {
      printf("\t\t登录成功\n");
    }

}

void zhuce()
{
    //实现注册
        char temp[20],txt[100],cha,chose;
        //定义两个数组，一个存放键盘输入的用户名和密码
    do
    {
        printf("=============================================");
        printf("\n\n\t\t 用户注册：");
        printf("\n\n\t\t 用户名：");
        scanf("%s",pe.user);
        fp=fopen(pe.user,"r");
        /*判断用户名是否重复*/
        if(fp!=NULL) 
        {
           printf("\n\t\t 该用户名已存在");
           fclose(fp);
           printf("\n\t\t 重新注册?(Y/N?): ");
           scanf("%s",&chose);
                if(chose=='Y') 
                {
                    system("cls");
                    return zhuce();
                }
                else 
                {
                    
                    return denglu();
                }
        }
         
         /*确认两次密码输入是否一致*/
        printf("\n\t\t 密  码:");
        scanf("%s",pe.code);
        printf("\n\t\t 确认密码:");
        scanf("%s",temp);
        if(strcmp(pe.code,temp)!=0)
        {
            printf("\n\t\t两次密码不一致,请重新输入");
        }
    }while(strcmp(pe.code,temp)!=0);

    /*用户名密码无误，写入文档储存用户信息*/
    fp=fopen(pe.user,"w");
    if(fp==NULL)
       {
          printf("\n\t注册失败\n");
          exit(0);
       }
    else 
    {
        printf("\n\t\t 注册成功\n");
        write();               //用户信息写入函数，底下给出
        judge = false;
        //denglu();             //这里跳转到登陆模块
    }
}

int main()
{
    char a[20];
    a[0]='0';
    printf("\n\n操作选择： 1.登录\t2.注册 ");
    scanf("%s",a);
    if(a[0] == '1')
    {
        denglu();
    }
    else if( a[0] == '2')
    {
        zhuce();
    }

    
}
